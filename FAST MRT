void load() {
	int i, j;
	int a = 177, b = 219; // 176,175
	printf("\t\t\t\t         ");
	for (j = 0; j < 25; j++)
		printf("%c", a);
	printf("]\r");
	printf("\t\t\t\tLoading [");
	for (i = 0; i < 25; i++) {
		Sleep(100);
		printf("%c", b);
	}
	printf("]\n\n");
}


