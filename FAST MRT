class testing {

	long int ARNnumber;
	long int challanno;

	string fathername, studentname, address, gender, dateofbirth, city;
	long long fathercnic, studentcnic;
	int fathersalary, dependentpeople;
	string country, fatheroccupation, motheroccupation, school, college;
	float matric, inter;
	string first, second, third, fourth, fifth;


public:
	testing() {}
	testing(long int n)
	{
		ARNnumber = n;
	}
	void setARNnumber(long int n)
	{
		this->ARNnumber = n;
	}
	long int getARNnumber()
	{
		return ARNnumber;
	}
	void setchallanno(long int num)
	{
		this->challanno = num;
	}
	long int getchallanno()
	{
		return challanno;
	}
	void set1(string fathername, string studentname, string address, string gender, string dateofbirth, string country, string city, long long fathercnic, long long studentcnic) {

		this->fathername = fathername;
		this->studentname = studentname;
		this->address = address;
		this->gender = gender;
		this->dateofbirth = dateofbirth;
		this->country = country;
		this->city = city;
		this->fathercnic = fathercnic;
		this->studentcnic = studentcnic;

	}

	void set2(int fathersalary, int dependentpeople, string fatheroccupation, string motheroccupation) {

		this->fathersalary = fathersalary;
		this->dependentpeople = dependentpeople;
		this->fatheroccupation = fatheroccupation;
		this->motheroccupation = motheroccupation;

	}


	void set3(string school, string college, float matric, float inter) {

		this->school = school;
		this->college = college;
		this->matric = matric;
		this->inter = inter;

	}

	void set4(string first, string second, string third, string fourth, string fifth) {
		this->first = first;
		this->second = second;
		this->third = third;
		this->fourth = fourth;
		this->fifth = fifth;
	}

	string getFatherName() { return fathername; }
	string getStudentName() { return studentname; }
	string getAddress() { return address; }
	string getGender() { return gender; }
	string getDateOfBirth() { return dateofbirth; }
	string getCity() { return city; }
	long long getFatherCnic() { return fathercnic; }
	long long getStudentCnic() { return studentcnic; }


	int getFatherSalary() { return fathersalary; }
	int getDependentPeople() { return dependentpeople; }
	string getCountry() { return country; }
	string getFatherOccupation() { return fatheroccupation; }
	string getMotherOccupation() { return motheroccupation; }


	string getSchool() { return school; }
	string getCollege() { return college; }
	float getMatric() { return matric; }
	float getInter() { return inter; }


	string getFirst() { return first; }
	string getSecond() { return second; }
	string getThird() { return third; }
	string getFourth() { return fourth; }
	string getFifth() { return fifth; }


};

///////////classrom///////////////
class room {

	static int studentscapacity;//30
	static int i;
	static int date;//13
	int month = 7;//7
	int year = 2023;
	static int time1, time2;
	//9 to 4 : 9 to 10 ,1030 to 1130 ,12 to 1,130 to 230 , 3 to 4

public:
	void display() {
		cout << "------------------------------------------------------------------------------------------------" << endl;
		cout << "                                   ASSIGNING ROOM                                               " << endl;
		cout << "------------------------------------------------------------------------------------------------" << endl;
	}
	void assignroom() {

		cout << "Your Test is at:\n";
		if (studentscapacity <= 30 && i <= 20 && time1 <= 3 && time2 <= 4) {
			cout << date << "-" << month << "-" << year << endl;
			cout << "Venue Lab-" << i << endl;
			cout << "At Around = " << time1 << " to " << time2 << endl;
			studentscapacity++;
		}
		else if (studentscapacity > 30 || i > 20 || (time1 > 3 && time2 > 4)) {
			if (studentscapacity > 30) {
				i++;
				studentscapacity = 0;
				cout << date << "-" << month << "-" << year << endl;
				cout << "Venue Lab-" << i << endl;
				cout << "At Around = " << time1 << " to " << time2;

			}
			else if (i > 20) {
				i = 1;
				time1 += 2;
				time2 += 2;
				cout << date << "-" << month << "-" << year << endl;
				cout << "Venue Lab-" << i << endl;
				cout << "At Around = " << time1 << " to " << time2;


			}
			else if (time1 > 3 && time2 > 4) {
				date++;
				time1 = 9;
				time2 = 10;
				cout << date << "-" << month << "-" << year << endl;
				cout << "Venue Lab-" << i << endl;
				cout << "At Around = " << time1 << " to " << time2;

			}

		}

	}

};
int room::studentscapacity = 0;
int room::date = 13;
int room::i = 1;
int room::time1 = 9;//+2
int room::time2 = 10;//+2


////////////////////////////restaurant///////////////////////////////////////////////////////////////////
class restaurant {

protected:
	long long  no; int a;
	int	opt[10], q[10], bill[10];
	

public:
	int totalbill=0;
	double time = 0.0;
	virtual void itemchosing(int it) {}
	virtual void receipt(int it,string na) {}


	int gettotalbill() {
		return totalbill;
		
	}
	double gettime() {
		return time;
	}

	void paying(int pay) {

		if (pay == 1) {
			cout << "Enter Mobile Number  = ";
			cin >> no;
			cout << "Enter Amount = ";
			cin >> a;
			cout << "\nMoney Has Been Paid" << endl;
		}
		else if (pay == 2) {

		}

	}

};

class shawarma_corner : public restaurant {
protected:
	int price1[5] = { 170,130,150,150,170 };


public:
	void itemchosing(int it) {
		for (int i = 0; i < it; i++) {
			cout << "Enter Item No. = ";
			cin >> opt[i];
			cout << "Enter Quantity = ";
			cin >> q[i];

			bill[i] = price1[opt[i]] * q[i];
			totalbill += bill[i];
			if (q[i] <= 2) {
				time += 2.5;
			}
			if (q[i] > 2) {
				time += 3;
			}
		}
	}

	void receipt(int it,string na) {

		string shawarma[5] = { "Zinger Shawarma  ","Chicken Shawarm  ", "Mayo Shawarma    ", "Mekroni Shawarma ", "Cheese Shawarma  " };
		cout << "Item Name       " << "   " << "Qt" << "   " << "Rates" << endl;
		for (int i = 0; i < it; i++) {
			cout << shawarma[opt[i]] << "   " << q[i] << "   " << bill[i];
			cout << endl;
		}

		ofstream rfile(na, ios::app);

		if (rfile.is_open()) {
			rfile << "Item Name       " << "   " << "Qt" << "   " << "Rates" << endl;
			for (int i = 0; i < it; i++) {
				rfile << shawarma[opt[i]] << "   " << q[i] << "   " << bill[i];
				rfile << endl;
			}
			rfile.close(); 
			
		}
		


	}


};
