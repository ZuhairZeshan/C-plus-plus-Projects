////////////////////////////mapping class///////////////////////////////////////////////////////////////////
class mapping {

public:
    void individualthings(string filename) {

        string line, find;

        while (find != "e") {
            cout << "Press e to exit\nEnter The Name  = ";
            cin >> find;

            fstream file;
            string word;

            file.open(filename.c_str());
            while (file >> word) { //take word and print
                if (word == find) {

                    getline(file, line);
                    cout << word << line << endl;
                }
            }
            cout << endl;
        }
    }

    void getlist(string filename) {
        fstream myfile;
        myfile.open(filename, ios::in);

        string line;

        while (getline(myfile, line)) {
            cout << line << endl;
        }
    }

};

/// <summary>
///////////////////////////////////////////////account///////////////////////////
/// </summary>

class Account {
    string username, password;

public:
	bool is_valid_password(const std::string& password) {
		bool has_digit = false;
		bool has_alpha = false;
		for (char c : password) {
			if (std::isdigit(c)) {
				has_digit = true;
			}
			if (std::isalpha(c)) {
				has_alpha = true;
			}
			if (has_digit && has_alpha) {
				return true;
			}
		}
		return false;
	}

    void sign_up() {
        cout << "Please enter a username: ";
        cin >> username;
        cout << "Please enter a password: ";
        cin >> password;
		
		try {
			if (!is_valid_password(password)) {
				throw password;
			}
		
		}catch (int ex) {
			cout << "Error: " << endl;
		}
		
        system("cls");

		ofstream userfile("signin.txt",ios::app); 

		if (userfile.is_open()) { 
			userfile << username<<" "<<password<<"\n";
			userfile.close(); 
			
		}
    }

    bool sign_in() {
        string user, pass,u,p;
        cout << "Please enter your username: ";
        cin >> user;
        cout << "Please enter your password: ";
        cin >> pass;
        
		
		char ch;
		int passflag = 0;
		fstream fin("signin.txt", fstream::in);
		while (fin >> noskipws >> ch) {
			if (passflag == 0) {
				if (ch == ' ') {
					
						passflag = 1;
					
				}
				else {
					u += ch;
				}
			}
			else  {
				if (ch == '\n') {
					
					if (u == user && p == pass) {
						cout << "Log in successful!" << endl;
						passflag = 0;
						u = "";
						p = "";
						return true;
						
					}
					
					passflag = 0;
					u = "";
					p = "";
				}
				else {
					p += ch;
					
				}
			}
		}
		passflag = 0;
		u = "";
		p = "";
		cout << "Check Password and Username" << endl;
		return false;
        
    }

};




